package xmetamodel.factory;

import com.salexandru.xcorex.interfaces.XEntity;
import xmetamodel.*;
import xmetamodel.implementation.*;

public class FactoryMethod {
   private static LRUCache<Object, XEntity> lruCache_ = new LRUCache<>(1000);
   private FactoryMethod() {}
   public static void setCacheCapacity(int capacity) {
       lruCache_.setCapacity(capacity);
   }
   public static void clearCache() {lruCache_.clear();}
   public static XProject createXProject(org.eclipse.jdt.core.IJavaProject obj) {
       XEntity instance = lruCache_.get(obj);
        if (null == instance) {
           instance = new XProjectImpl(obj);
           lruCache_.put(obj, instance);
        }
        return (XProject)instance;
    }
   public static XMethod createXMethod(org.eclipse.jdt.core.IMethod obj) {
       XEntity instance = lruCache_.get(obj);
        if (null == instance) {
           instance = new XMethodImpl(obj);
           lruCache_.put(obj, instance);
        }
        return (XMethod)instance;
    }
   public static XPackage createXPackage(org.eclipse.jdt.core.IPackageFragment obj) {
       XEntity instance = lruCache_.get(obj);
        if (null == instance) {
           instance = new XPackageImpl(obj);
           lruCache_.put(obj, instance);
        }
        return (XPackage)instance;
    }
   public static XClass createXClass(org.eclipse.jdt.core.IType obj) {
       XEntity instance = lruCache_.get(obj);
        if (null == instance) {
           instance = new XClassImpl(obj);
           lruCache_.put(obj, instance);
        }
        return (XClass)instance;
    }
}
